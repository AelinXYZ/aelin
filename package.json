{
	"name": "aelin",
	"version": "1.0.0",
	"homepage": "https://aelin.xyz",
	"description": "A community fundraising protocol",
	"scripts": {
		"lint:js": "prettier --check '**/*.{t,j}s' && eslint --max-warnings=0 '**/*.{t,j}s'",
		"lint:js:fix": "prettier --write '**/*.{t,j}s' && eslint --max-warnings=0 --fix '**/*.{t,j}s'",
		"lint:sol:prettier": "prettier --check '(contracts|test)/**/*.sol'",
		"lint:sol:solhint": "solhint \"contracts/*.sol\" && solhint \"contracts/interfaces/*.sol\" && solhint \"contracts/interfaces/*.sol\" && solhint \"contracts/libraries/*.sol\"",
		"lint:sol:fix": "prettier --write '(contracts|test)/**/*.sol' && solhint --fix contracts/**/*.sol",
		"lint": "yarn lint:js && yarn lint:sol:prettier",
		"format": "prettier --write \"contracts/**/*.sol\" \"**/*.js\" \"**/*.md\" \"**/*.yml\" \"**/*.json\"",
		"test": "forge test --no-match-contract NftCheck",
		"compile": "forge compile",
		"run": "cannon run aelin-contracts:$VERSION --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID",
		"deploy:local": "cannon build",
		"deploy:new": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID",
		"deploy:update": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID --upgrade-from aelin-contracts:$VERSION",
		"deploy:test:update": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID --upgrade-from aelin-contracts:$VERSION --dry-run",
		"verify": "cannon verify aelin-contracts:$VERSION --api-key $ETHERSCAN_API_KEY --chain-id $CHAIN_ID"
	},
	"devDependencies": {
		"@eth-optimism/contracts": "^0.5.40",
		"@ethersproject/address": "^5.7.0",
		"@ethersproject/contracts": "^5.7.0",
		"@ethersproject/providers": "^5.7.0",
		"@ethersproject/units": "^5.7.0",
		"@ethersproject/wallet": "^5.7.0",
		"@matterlabs/hardhat-zksync-deploy": "^0.6.3",
		"@matterlabs/hardhat-zksync-solc": "^0.3.17",
		"@matterlabs/hardhat-zksync-verify": "^0.1.6",
		"@nomiclabs/hardhat-etherscan": "^3.1.7",
		"@openzeppelin/contracts": "4.8.3",
		"@openzeppelin/merkle-tree": "^1.0.4",
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"date-fns": "^2.29.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"graphql-request": "^6.0.0",
		"hardhat": "^2.14.0",
		"prettier": "^2.8.7",
		"prettier-plugin-solidity": "^1.1.3",
		"solhint": "^3.4.1",
		"solhint-plugin-numcast": "^1.0.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"zksync-web3": "^0.14.3"
	}
}
