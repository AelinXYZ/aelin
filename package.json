{
	"name": "aelin",
	"version": "1.0.0",
	"homepage": "https://aelin.xyz",
	"description": "A community fundraising protocol",
	"scripts": {
		"lint": "solhint \"contracts/*.sol\" && solhint \"contracts/test-helpers/*.sol\" && solhint --config contracts/interfaces/.solhint.json \"contracts/interfaces/*.sol\" && eslint \"**/*.js\"",
		"format": "prettier --write \"contracts/**/*.sol\" \"**/*.js\" \"**/*.md\" \"**/*.yml\" \"**/*.json\"",
		"test": "forge test --no-match-contract NftCheck",
		"compile": "forge compile",
		"run": "cannon run aelin-contracts:$VERSION --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID",
		"deploy:local": "cannon build",
		"deploy:new": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID",
		"deploy:update": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID --upgrade-from aelin-contracts:$VERSION",
		"deploy:test:update": "cannon build --provider-url $PROVIDER_URL --private-key $PRIVATE_KEY --chain-id $CHAIN_ID --upgrade-from aelin-contracts:$VERSION --dry-run",
		"verify": "cannon verify aelin-contracts:$VERSION --api-key $ETHERSCAN_API_KEY --chain-id $CHAIN_ID"
	},
	"devDependencies": {
		"@eth-optimism/contracts": "^0.5.40",
		"@ethersproject/address": "^5.7.0",
		"@openzeppelin/contracts": "4.8.3",
		"date-fns": "^2.29.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"graphql-request": "^6.0.0",
		"prettier-plugin-solidity": "^1.1.3"
	}
}
